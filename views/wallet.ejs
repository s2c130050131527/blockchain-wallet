   <body>
      <!-- WRAPPER -->
      <div id="wrapper">
         <!-- NAVBAR -->
         <nav class="navbar navbar-default navbar-fixed-top">
            <div class="brand">
               <a href="/"><img src="images/logo-dark.png" alt="SSL Wallet" class="img-responsive logo"></a>
            </div>
            <div class="container-fluid">
               <div class="navbar-btn">
                  <button type="button" class="btn-toggle-fullwidth"><i class="lnr lnr-arrow-left-circle"></i></button>
               </div>
               <div id="navbar-menu">
                  <ul class="nav navbar-nav navbar-right">
                     <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="images/user.png" class="img-circle" alt="Avatar"> <span><%=  user.username %></span> <i class="icon-submenu lnr lnr-chevron-down"></i></a>
                        <ul class="dropdown-menu">
                           <li><a href="/logout"><i class="lnr lnr-exit"></i> <span>Logout</span></a></li>
                        </ul>
                     </li>
                  </ul>
               </div>
            </div>
         </nav>
         <!-- END NAVBAR -->
         <!-- LEFT SIDEBAR -->
         <div id="sidebar-nav" class="sidebar">
            <div class="sidebar-scroll">
               <nav>
                  <ul class="nav">
                     <li><a href="/wallet" class="active"><i class="lnr lnr-home"></i> <span>Wallet</span></a></li>
                     <li><a href="/receive" class=""><i class="lnr lnr-arrow-right"></i> <span>Receive</span></a></li>
                     
