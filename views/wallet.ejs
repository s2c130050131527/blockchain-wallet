                                 <li><a href="page-lockscreen.html" class="">Lockscreen</a></li> -->
                           </ul>
                        </div>
                     </li>

                  </ul>
               </nav>
            </div>
         </div>
         <!-- END LEFT SIDEBAR -->
         <!-- MAIN -->
         <div class="main">
            <!-- MAIN CONTENT -->
            <div class="main-content">
               <div class="container-fluid">
                  <!-- OVERVIEW -->
                  <div class="panel panel-headline">
                     <div class="panel-heading">
                        <h3 class="panel-title">Wallets</h3>
                     </div>
                     <!-- COINS -->
                     <div class="panel-body">
                        <div class="row">
                           <div class="col-md-3">
                              <div class="metric">
                                 <span class="icon-epic"></span>
                                 <p>
                                    <span class="number">EPIC</span>
                                    <span class="title"> <%= epic %></span>
                                 </p>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <!-- END OVERVIEW -->
            </div>
         </div>
         <!-- END MAIN CONTENT -->
      </div>
